<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_todo_page" name="Actor">
        <t t-call="website.layout">
            <div class="todo-app container">
                <h3 class="my-3 text-center">Todo list : </h3>
                <button class="btn btn-secondary text-center">Reset</button>
                <div class="row">
                    <div class="col-12">
                        <form action="/" method="post">
                            <div class="form-row align-items-center justify-content-center">
                                <div class="col-11 my-1">
                                    <input name="todo" type="text" class="form-control" id="totoapp" placeholder="Manger des frites ? " />
                                </div>
                                <div class="col-1 my-1">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="list-todo">
                    <ul class="list-group my-4">

                      </ul>
                </div>
            </div>

        </t>
    </template>
</odoo>