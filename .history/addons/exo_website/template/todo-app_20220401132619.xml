<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_todo_page" name="Actor">
        <t t-call="website.layout">
            <div class="todo-app container">
                <h3 class="my-3 text-center">Todo list : </h3>


                <div class="row">
                    <div class="col-12">
                        <form action="/" method="post">
                            <div class="form-row align-items-center">
                                <div class="col-sm-3 my-1">
                                    <label class="sr-only" for="todo">Name</label>
                                    <input name="todo" type="text" class="form-control" id="inlineFormInputName" placeholder="Jane Doe" />
                                </div>
                                <div class="col-auto my-1">
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </t>
    </template>
</odoo>